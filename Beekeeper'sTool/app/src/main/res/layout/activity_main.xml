<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"  tools:context=".MainActivity"

   >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView android:text="This app is coming out soon. Please click the button below to see this app being worked on." android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#ff000000" />
        <TextView android:text="By using this app, you agree to the terms." android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#ff000000" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
           >

            <Button
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:text="How to make this app"
                android:id="@+id/b_youtube"
                android:textSize="30dp"
                android:background="@drawable/blank"
                />


            <Button
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                android:text="Main menu"
                android:id="@+id/menu"
                android:textSize="30dp"
                android:background="@drawable/blank"
                android:layout_marginTop="15dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text=""
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Help"
                android:id="@+id/help"
                android:textSize="30dp"
                android:background="@drawable/blank"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text=""
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pest"
                android:id="@+id/pest"
                android:textSize="30dp"
                android:background="@drawable/blank"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
